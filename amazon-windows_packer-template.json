{
    "variables": {
        "aws_region": "{{env `AWS_REGION`}}",
        "aws_ami_name": "amazon-linux_{{timestamp}}",
	"vpcid":"{{env `VPC_ID`}}",
	"subnetid":"{{env `SUBNET_ID`}}",
	"securitygroupid":"{{env `SECURITY_GID`}}"
    },

    "builders": [{
        "type": "amazon-ebs",
        "region": "{{user `aws_region`}}",
        "instance_type": "m5.large",
	"communicator": "winrm",
        "winrm_username": "Administrator",
        "ami_name": "{{user `aws_ami_name`}}",
        "ami_description": "Customized Windows Image",
	"vpc_id":"{{user `vpcid`}}",
	"subnet_id":"{{user `subnetid`}}",
	"security_group_id":"{{user `securitygroupid`}}",
        "source_ami_filter": {
            "filters": {
                "virtualization-type": "hvm",
                "name": "Windows_Server-2016-English-Full-Base*",
                "root-device-type": "ebs"
            },
            "owners": ["137112412989", "591542846629", "801119661308", "102837901569", "013907871322", "206029621532", "286198878708", "443319210888"],
            "most_recent": true
        }
    }],

    "provisioners": [
        {
            "type": "powershell",
            "inline": [
                "wget -OutFile Notepad-plus.exe https://notepad-plus-plus.org/repository/7.x/7.5.6/npp.7.5.6.Installer.x64.exe",
		"wget -OutFile https://www.7-zip.org/a/7z1805-x64.msi",
                "wget -OutFile https://download.sysinternals.com/files/SysinternalsSuite.zip",
		"echo Build Complete."
		
            ]
        }
    ]
}
